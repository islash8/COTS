#define EXTI_PRIVATE_CONFIG_H_

/* Array contains the interrupt state whether it's enabled or disabled */
u8 EXTI_Au8InterruptState[EXTI_u8_NUMBER_OF_INTERRUPTS]={EXTI_u8_INT0_STATE, EXTI_u8_INT1_STATE, EXTI_u8_INT2_STATE};

/* Array contains the interrupt sensing level, whether it's edge       */
/* or level triggered or both 										   */
